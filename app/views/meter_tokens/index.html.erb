<p id="notice"><%= notice %></p>

<h1>Meter Tokens</h1>

<table>
  <thead>
    <tr>
      <th>Token</th>
      <th>Meter</th>
      <th>Meter type</th>
      <th>Device</th>
      <th>Device sim no</th>
      <th>Device address</th>
      <th>Auto load device</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meter_tokens.each do |meter_token| %>
      <tr>
        <td><%= meter_token.token %></td>
        <td><%= meter_token.meter_id %></td>
        <td><%= meter_token.meter_type %></td>
        <td><%= meter_token.device_id %></td>
        <td><%= meter_token.device_sim_no %></td>
        <td><%= meter_token.device_address %></td>
        <td><%= meter_token.auto_load_device.name %></td>
        <td><%= link_to 'Show', meter_token %></td>
        <td><%= link_to 'Edit', edit_meter_token_path(meter_token) %></td>
        <td><%= link_to 'Destroy', meter_token, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

